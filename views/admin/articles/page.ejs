<%- include ("../../partials/header.ejs") %>
  <%- include ("../../partials/homeNavbar.ejs") %>

    <body>
      <hr>
      <h1 class="text-center">Bem-vindo!</h1>
      <hr>
      <div class="container-fluid justify-content-center d-flex text-center flex-wrap gap-3 bg-dark py-4">
        <% result.articles.rows.forEach(articles=> {%>
          <div class="card mt-3">
            <div class="card-header">
              <p>
                <%= articles.id %>
              </p>
              <h6>
                <%= articles.title%>
              </h6>
            </div>
            <div class="card-body">
              <a href="/<%= articles.slug %>" class="btn btn-primary"> Ler Artigo</a>
            </div>
          </div>


          <%})%>
      </div>
      <div class="container py-1 text-center">
        <%if(page>= 2){%>
          <a href="/articles/page/<%= page - 1 %>" class="btn btn-primary" style="float: left;">anterior</a>
          <%} else{%>
            <a href="/" class="btn btn-primary" style="float: left;">anterior</a>
            <%}%>


              <% if(result.next){ %>
                <a href="/articles/page/<%= page + 1 %>" class="btn btn-primary" style="float: right;">proximo</a>
                <%}%>
      </div>
    </body>
    <%- include ("../../partials/footer.ejs") %>