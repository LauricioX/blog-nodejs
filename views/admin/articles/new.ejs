<%- include ("../../partials/header.ejs") %>

  <body>
    <%- include ("../../partials/navbar.ejs") %>

      <div class="container col-6 mt-3">

        <div class="card">
          <div class="card-header">
            <h2>novo artigo</h2>
          </div>

          <div class="card-body">
            <form action="/articles/save" method="post">
              <input class="form-control mb-3" type="text" name="title" placeholder="Defina o titulo do artigo">
              <textarea class="mt-3" placeholder="Escreva seu artigo aqui !" name="body"
                class="form-control mt-3"></textarea>

              <label class="my-2">Categoria</label>
              <select name="categories" class="form-control">
                <%categories.forEach(categorie=> {%>
                  <option value="<%= categorie.id %>">
                    <%= categorie.title %>
                  </option>

                  <%})%>
              </select>
              <button class="mt-3 btn btn-primary" type="submit">cadastrar</button>
            </form>
          </div>
        </div>
      </div>


      <script>
        tinymce.init({
          language: "pt_BR",
          selector: 'textarea',
          plugins: [
            "advlist autolink link image lists print preview hr searchreplace wordcount  fullscreen insertdatetime media save table paste emoticons"
          ]
        });
      </script>
  </body>
  <%- include ("../../partials/footer.ejs") %>